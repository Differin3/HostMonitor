[Unit]
Description=Monitoring Web UI (Python server + php-cgi)
After=network.target php-fpm.service

[Service]
Type=simple
User=monitoring
WorkingDirectory=/opt/monitoring
Environment="PATH=/opt/monitoring/.venv/bin"
Environment="WEB_HOST=0.0.0.0"
Environment="WEB_PORT=8080"
ExecStart=/opt/monitoring/.venv/bin/python3 scripts/python_web_server.py
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target

