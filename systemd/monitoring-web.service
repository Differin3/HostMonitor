[Unit]
Description=Monitoring Web UI (Python server + php-cgi)
After=network.target php-fpm.service

[Service]
Type=simple
User=monitoring
WorkingDirectory=/opt/monitoring
Environment="PATH=/opt/monitoring/.venv/bin"
ExecStart=/opt/monitoring/.venv/bin/python3 scripts/python_web_server.py --host 0.0.0.0 --port 8080
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target

